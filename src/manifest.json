{
    "name": "Minimum Wage",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Transforms prices on Amazon.com to values in time spent earning minimum wage",
    "content_scripts": [
        {
            "matches": [
                "https://amazon.com/*",
                "http://www.amazon.com/*"
            ],
            "js": [
                "scripts/jquery.js",
                "scripts/moment.js",
                "scripts/index.js"
            ]
        }
    ],
    "content_security_policy": "script-src 'self' http://localhost; object-src 'self' http://localhost",
    "incognito": "split",
    "offline_enabled": false,
    "permissions": [
        "tabs",
        "https://*.amazon.com/*",
        "http://localhost/*"
    ],
    "update_url": "http://path/to/updateInfo.xml",
    "web_accessible_resources": [
        "manifest.json",
        "data/common_first_names.txt",
        "data/common_last_names.txt",
        "data/usernames.txt",
        "glitter_cursor.gif"
    ]
}